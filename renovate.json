{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 3am on Monday"
  ],
  "timezone": "UTC",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "samuelho-dev"
  ],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "packageRules": [
    {
      "description": "Group all patch and minor updates together",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Separate major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": null
    },
    {
      "description": "Auto-merge patch updates after CI passes",
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Group TypeScript and ESLint together",
      "matchPackagePatterns": [
        "^@typescript-eslint/",
        "^typescript-eslint$",
        "^eslint",
        "^typescript$"
      ],
      "groupName": "TypeScript and ESLint"
    },
    {
      "description": "Group Prisma packages together",
      "matchPackagePatterns": [
        "^@prisma/",
        "^prisma$"
      ],
      "groupName": "Prisma"
    },
    {
      "description": "Group testing packages together",
      "matchPackagePatterns": [
        "^jest",
        "^@types/jest",
        "^ts-jest"
      ],
      "groupName": "Testing"
    },
    {
      "description": "Pin Effect to avoid breaking changes",
      "matchPackageNames": [
        "effect"
      ],
      "rangeStrategy": "pin"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "assignees": [
      "samuelho-dev"
    ]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}
