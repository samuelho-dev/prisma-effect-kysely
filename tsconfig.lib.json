{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "types": ["node"]
  },
  "include": [
    "src/generator/**/*.ts",
    "src/utils/**/*.ts",
    "src/prisma/**/*.ts",
    "src/effect/**/*.ts",
    "src/kysely/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**/*",
    "src/generators/**/*",
    "src/mappers/**/*",
    "src/orchestrator.ts"
  ]
}
